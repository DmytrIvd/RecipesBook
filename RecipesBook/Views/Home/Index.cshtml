@{
    ViewData["Title"] = "Home Page";


    IEnumerable<Recipe> recipes = ViewData["Recipes"] as IEnumerable<Recipe>;
    IEnumerable<Category> categories = ViewData["Categories"] as IEnumerable<Category>;
    bool fisrt = true;
}

<h4 class="text-center my-4">Popular recipes</h4>
<div id="carouselExampleFade" class="carousel slide" data-ride="carousel">

    @*Popular recipes*@
    @*Structure

        <div class="carousel-item">
            <img src="~/path-to-photo" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>|| Receipt Name ||</h5>
                <p>|| Receipt Description ||</p>
                <a class="btn btn-outline-secondary" href="/recipes/|| Receipt id ||">
                    View receipt
                </a>
            </div>
        </div>
    *@

    <div class="carousel-inner">

        @foreach (var recipe in recipes)
        {
            if (fisrt)
            {
                <div class="carousel-item active">
                    <img src=@recipe.MainImage class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@recipe.Name</h5>
                        <p>@recipe.Description</p>
                        <a class="btn btn-outline-secondary" href="/recipes/@recipe.ID">
                            View receipt
                        </a>
                    </div>
                </div>
                fisrt = false;
            }
            else{
                <div class="carousel-item">
                    <img src="~/path-to-photo" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@recipe.Name</h5>
                        <p>@recipe.Description</p>
                        <a class="btn btn-outline-secondary" href="/recipes/@recipe.ID">
                            View receipt
                        </a>
                    </div>
                </div>
            }

        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<h4 class="text-center my-5">Popular  categories</h4>
<div class="row mt-5">
    @*Categories*@
    @foreach (var category in categories)
    {
        <div class="col-md-6 col-lg-3 mb-4 category">
            <a href="/category/@category.ID" class="category-link">


                <div class="card">
                    <img class="category-photo card-img" src=@category.MainImage>
                    <div class="card-img-overlay">
                        <h1 class="card-title text-black text-center">@category.Name</h1>
                    </div>
                </div>
            </a>
        </div>
    }




</div>

