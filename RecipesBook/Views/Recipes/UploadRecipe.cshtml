@model RecipesBook.Models.Entities.Recipe

@{
    ViewData["Title"] = "UploadRecipe";
    IEnumerable<Category> categories = (IEnumerable<Category>)ViewData["Categories"];
    MultiSelectList selectListItems = new MultiSelectList(categories, "Id", "Name", Model != null ? Model.Categories.Select(c => c.Id).ToArray() : null);
}

<h1>UploadRecipe</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UploadRecipe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categories"></label>
                @Html.ListBox("Categories", selectListItems, new { @class = "form-control" })
                <span asp-validation-for="Categories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="image" class="control-label"></label>
                <input id="image" name="image" type="file" class="form-control" />
                <span asp-validation-for="MainImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
