@model CategoryAddEditViewModel

@{
    ViewData["Title"] = "CreateCategory";
}

<h1>CreateCategory</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="createCategoryForm" asp-action="CreateCategory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <label class="input-group-text" asp-for="MainImage">Select image</label>
                </div>
                <input asp-for="MainImage" class="form-control" accept="image/*" />


            </div>
            <span asp-validation-for="MainImage" class=" input-group-text text-danger mb-4"></span>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

